# Database Configuration - PostgreSQL Auth
POSTGRES_AUTH_USER=your_username
POSTGRES_AUTH_PASSWORD=your_password
POSTGRES_AUTH_DB=auth_db

# Database Configuration - PostgreSQL Query
POSTGRES_QUERY_USER=your_username
POSTGRES_QUERY_PASSWORD=your_password
POSTGRES_QUERY_DB=query_db

# ClickHouse Configuration
CLICKHOUSE_HOST=your_host
CLICKHOUSE_USER=your_user
CLICKHOUSE_PASSWORD=your_password
CLICKHOUSE_DB=your_db

# JWT Secret
